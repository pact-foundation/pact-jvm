{
  "provider" : {
    "name" : "Books-Service"
  },
  "consumer" : {
    "name" : "Authors-Service"
  },
  "interactions" : [ {
    "provider_state": "create-book",
    "description" : "Add book",
    "request" : {
      "method" : "POST",
      "path" : "/books",
      "body": {
        "id": "5c761cf1-50e1-4604-9b0e-f2130e4064a0",
        "author": "Ray Barrowman",
        "bestSeller": true,
        "createdOn": "2018-01-01T00:00:00.000Z"
      },
      "matchingRules": {
        "$.body.id": {
          "regex": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
        },
        "$.body.author": {
          "match": "type"
        },
        "$.body.bestSeller": {
          "match": "type"
        },
        "$.body.createdOn": {
          "match": "regex",
          "regex": "^\\d{4}-[01]\\d-[0-3]\\d.*Z$"
        }
      },
      "headers": {
        "Cache-Control": "no-cache",
        "Accept": "application/json",
        "Content-Type": "application/json;charset=UTF-8"
      }
    },
    "response" : {
      "status" : 201
    }
